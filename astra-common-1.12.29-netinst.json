{
  "variables": {
    "cpus":                 "2",
    "name":                 "astra-orel",
    "domain":               "sjsma.home",
    "version":              "1.12.29",
    "user":                 "vagrant",
    "password":             "vagrant",
    "size":                 "30000",
    "mirror":               "http://download.astralinux.ru/astra/stable/orel/iso/orel-current.iso",
    "md5sum":               "6f0102e904a793b3674f8d0fedd6d93f"
  },

  "builders": [
    {
      "machine_type":       "ubuntu",
      "name":               "{{user `name`}}",
      "type":               "qemu",
      "format":             "qcow2",
      "accelerator":        "kvm",

      "disk_size":          "{{user `size`}}",
      "disk_interface":     "virtio",

      "iso_url":            "{{user `mirror`}}",
      "iso_checksum":       "md5:{{user `md5sum`}}",

      "http_directory":     "http",

      "ssh_username":       "{{user `user`}}",
      "ssh_password":       "{{user `password`}}",
      "ssh_port":           22,
      "ssh_wait_timeout":   "120m",

      "net_device":         "e1000",

      "shutdown_command":   "echo '{{user `password`}}'| sudo systemctl poweroff",

      "boot_wait":          "2s",
      "cpus":               "{{ user `cpus` }}",
      "qemuargs": [
        [
          "-m",
          "1024M"
        ],
        [
          "--no-acpi",
          ""
        ],
        [
          "-smp",
          "{{ user `cpus` }}"
        ],
        [
          "-rtc",
          "base=localtime"
        ]
      ],
      "boot_command": [
        "<esc><wait>",
        "<esc><enter><wait>",
        "/netinst/linux ",
        "net.ifnames=0" ,
        "modprobe.blacklist=evbug ",
        "vga=788 ",
        "auto=true ",
        "priority=critical ",
        "debian-installer/locale=ru_RU ",
        "debian-installer/keymap=ru ",
        "hostname={{user `name`}} ",
        "domain={{user `domain`}} ",
        "astra-license/license=true ",
        "url=http://192.168.1.10:{{ .HTTPPort }}/{{user `name`}}-{{user `version`}}-{{user `type`}}.cfg ",
        "interface=auto ",
        "netcfg/dhcp_timeout=60 ",
        "initrd=/netinst/initrd.gz",
        "<enter><wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./ansible/remove_unnessesary.yml"
    },
    {
      "type":               "shell",
      "execute_command":    "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/minimize.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type":                   "vagrant",
      "output":                 "boxes/{{user `name`}}-{{user `version`}}.box",
      "include": [
        "data/Vagrantfile.spec",
        "data/metadata.json"
      ]
    }
  ]
}
